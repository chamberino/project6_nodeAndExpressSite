extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1.portfolio-title Portfolio

      p.lead.text-light A collection of projects I've built for the Team Treehouse Front End Web Development and Full Stack JavaScript TechDegrees.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
      
      each project in projects    
        .cell
          .photo.slide
            a(href= `/projects/${project.id}` target="_blank")
              img.thumbnail(src=`${project.image_urls[0]}`)
              .photo-overlay
                //- .skills
                //-   .skill
                //-     p HTML
                button.button.portfolio-button View Project
          h5= `${project.project_name}`      
